<Window x:Class="Galsov.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Galsov.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="StarEllipseStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="4" />
            <Setter Property="Height" Value="4" />
            <Setter Property="Fill" Value="White" />
            <Setter Property="StrokeThickness" Value="0" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelected}"
                    Value="True">
                    <Setter Property="Stroke" Value="Yellow" />
                    <Setter Property="StrokeThickness" Value="1.5" />
                    <Setter Property="Width" Value="6" />
                    <Setter Property="Height" Value="6" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <!-- Row 0: Error message bar -->
            <RowDefinition Height="Auto" />
            <!-- Row 1: Main content -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Error message at the top -->
        <Border Grid.Row="0"
                Background="#330000"
                Padding="4"
                Margin="4"
                CornerRadius="2">
            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="Red"
                       FontWeight="Bold" />
        </Border>

        <!-- Main content: options on the left, canvas on the right -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <!-- Options panel -->
                <ColumnDefinition Width="300" />
                <!-- Galaxy canvas -->
                <ColumnDefinition Width="*" />
                <!-- Selected system details -->
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>

            <!-- Options panel -->
            <StackPanel Grid.Column="0"
                        Margin="8"
                        Orientation="Vertical">
                <TextBlock Text="Debug Galaxy Generator"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,0,8" />

                <!-- Seed -->
                <TextBlock Text="Seed" />
                <TextBox Text="{Binding Seed, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,8" />

                <!-- Width -->
                <TextBlock Text="Width" />
                <TextBox Text="{Binding Width, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,8" />

                <!-- Height -->
                <TextBlock Text="Height" />
                <TextBox Text="{Binding Height, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,8" />

                <!-- StarSystemCount -->
                <TextBlock Text="Star System Count" />
                <TextBox Text="{Binding StarSystemCount, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,8" />

                <!-- DistributionPattern -->
                <TextBlock Text="Distribution Pattern" />
                <ComboBox Margin="0,0,0,8"
                    ItemsSource="{Binding DistributionPatterns}"
                     SelectedItem="{Binding DistributionPattern, Mode=TwoWay}">
                </ComboBox>

                <!-- EdgeMargin -->
                <TextBlock Text="Edge Margin" />
                <TextBox Text="{Binding EdgeMargin, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,8" />

                <!-- MinSystemSpacing -->
                <TextBlock Text="Min System Spacing" />
                <TextBox Text="{Binding MinSystemSpacing, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,8" />

                <!-- Scale / Zoom -->
                <TextBlock Text="Scale (Zoom)" />
                <Slider Minimum="1"
                        Maximum="20"
                        TickFrequency="1"
                        IsSnapToTickEnabled="True"
                        Value="{Binding Scale, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Margin="0,0,0,4" />
                                <TextBlock Text="{Binding Scale, StringFormat=Scale: {0:F1}}"
                           Margin="0,0,0,8" />

                <!-- Generate button -->
                <Button Content="Generate"
                        Command="{Binding GenerateCommand}"
                        Margin="0,12,0,0"
                        Height="32" />
            </StackPanel>

            <!-- Galaxy canvas -->
            <Border Grid.Column="1"
        Margin="8"
        BorderBrush="Gray"
        BorderThickness="1"
        Background="Black">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Summary row -->
                    <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    Margin="4">
                        <TextBlock Text="Pattern: "
                       Foreground="White" />
                        <TextBlock Text="{Binding DistributionPattern}"
                       Foreground="White"
                       Margin="4,0,16,0" />
                        <TextBlock Text="Stars: "
                       Foreground="White" />
                        <TextBlock Text="{Binding StarSystems.Count}"
                       Foreground="White"
                       Margin="4,0,0,0" />
                    </StackPanel>

                    <!-- Scrollable canvas -->
                    <ScrollViewer Grid.Row="1"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding StarSystems}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas x:Name="GalaxyCanvas"
                                MinWidth="800"
                                MinHeight="600" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <!-- Position each item based on X/Y on the Canvas -->
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="Canvas.Left" Value="{Binding X}" />
                                    <Setter Property="Canvas.Top" Value="{Binding Y}" />
                                </Style>
                            </ItemsControl.ItemContainerStyle>

                            <!-- Visual for each star system -->
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Ellipse Style="{StaticResource StarEllipseStyle}"
                                             MouseLeftButtonDown="StarEllipse_MouseLeftButtonDown">
                                        <Ellipse.ToolTip>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Id,         StringFormat=ID: {0}}" />
                                                <TextBlock Text="{Binding TileX,      StringFormat=Tile X: {0}}" />
                                                <TextBlock Text="{Binding TileY,      StringFormat=Tile Y: {0}}" />
                                                <TextBlock Text="{Binding StarClass,   StringFormat=Star: {0}}" />
                                                <TextBlock Text="{Binding PlanetCount, StringFormat=Planets: {0}}" />
                                            </StackPanel>
                                        </Ellipse.ToolTip>
                                    </Ellipse>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
            <!-- Selected system details panel -->
            <Border Grid.Column="2"
                    Margin="8"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Background="#101010">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Selected System"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="Bold"
                               Margin="4" />

                    <ScrollViewer Grid.Row="1"
                                  Margin="4"
                                  VerticalScrollBarVisibility="Auto">
                        <!-- Bind the whole panel to SelectedSystem -->
                        <StackPanel DataContext="{Binding SelectedSystem}">
                            <TextBlock Text="{Binding Id, StringFormat=ID: {0}}"
                                       Foreground="White" />
                            <TextBlock Text="{Binding Name, StringFormat=Name: {0}}"
                                       Foreground="White" />
                            <TextBlock Text="{Binding StarClass, StringFormat=Star: {0}}"
                                       Foreground="White" />
                            <TextBlock Text="{Binding Planets.Count, StringFormat=Planets: {0}}"
                                       Foreground="White"
                                       Margin="0,0,0,8" />

                            <ItemsControl ItemsSource="{Binding Planets}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Vertical" Margin="0,0,0,4">
                                            <TextBlock Text="{Binding Name}"
                                                       Foreground="White"
                                                       FontWeight="Bold" />
                                            <TextBlock Text="{Binding Type}"
                                                       Foreground="LightGray" />
                                            <TextBlock Text="{Binding OrbitIndex, StringFormat=Orbit: {0}}"
                                                       Foreground="Gray" />
                                            <TextBlock Text="{Binding SizeEarthRadii, StringFormat=Size (R⊕): {0:F1}}"
                                                       Foreground="Gray" />
                                            <TextBlock Text="{Binding IsHabitable, StringFormat=Habitable: {0}}"
                                                       Foreground="Gray" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
